<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.art.iai.android.aula.ui.TwitterApp"
    android:background="#ff33c5fe">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/status"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffb45b1f" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Status da autenticação:"
        android:id="@+id/tvStatus"
        android:layout_above="@+id/status"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Escreva seu POST:"
        android:id="@+id/tvInstrucao"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/post"
        android:layout_below="@+id/tvInstrucao"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bordas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Tweet"
        android:id="@+id/botaoEnviarTweet"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/post"
        android:layout_alignParentEnd="true"
        android:background="@drawable/brodas_cinza" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar Credenciais"
        android:id="@+id/botaoCancelarCredencial"
        android:layout_marginBottom="40dp"
        android:background="@drawable/brodas_cinza"
        android:layout_above="@+id/tvStatus"
        android:layout_alignEnd="@+id/botaoEnviarTweet" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/botaoLogin"
        android:layout_alignTop="@+id/botaoCancelarCredencial"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/botaoCancelarCredencial"
        android:layout_alignBottom="@+id/botaoCancelarCredencial"
        android:background="@drawable/brodas_cinza" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listar Home Twitter"
        android:id="@+id/botaoListar"
        android:layout_alignTop="@+id/botaoEnviarTweet"
        android:layout_alignParentStart="true"
        android:background="@drawable/brodas_cinza" />
</RelativeLayout>
