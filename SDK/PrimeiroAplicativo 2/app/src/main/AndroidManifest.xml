<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dbvtech.com.br.primeiroaplicativo" >

    <uses-permission android:name="android.permission.CAMERA"/>
    <!-- <uses-feature android:name="com.android.hardware.camera2" android:required="true"/> -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.orm.SugarApp">

        <!--

        /data/data/dbvtech.com.br.primeiroaplicativo/databases/primeiroapp.sqlite
        -->

        <meta-data android:name="DATABASE" android:value="primeiroapp.sqlite" />
        <meta-data android:name="VERSION" android:value="1" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="dbvtech.com.br.primeiroaplicativo" />

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AtividadeFormulario"
            android:label="@string/title_activity_atividade_formulario" >
        </activity>
        <activity
            android:name=".ui.AtividadeUsuarios"
            android:label="@string/title_activity_atividade_usuarios" >
        </activity>
    </application>

</manifest>
