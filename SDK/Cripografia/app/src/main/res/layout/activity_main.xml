<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/hdfhdfh"
    android:background="@android:color/background_dark">

    <TextView android:text="Senha:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSenha"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/senha"
        android:layout_below="@+id/tvSenha"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:drawable/editbox_background" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Proteger"
        android:id="@+id/botaoProteger"
        android:layout_below="@+id/senha"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/btn_default" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Desproteger"
        android:id="@+id/botaoDesproteger"
        android:layout_alignTop="@+id/botaoProteger"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:drawable/btn_default" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Texto em Claro:"
        android:id="@+id/tvTextoClaro"
        android:layout_below="@+id/botaoProteger"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/textoClaro"
        android:layout_below="@+id/tvTextoClaro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/botaoDesproteger"
        android:layout_alignEnd="@+id/botaoDesproteger"
        android:background="@android:drawable/editbox_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Texto Protegido:"
        android:id="@+id/tvTextoProtegido"
        android:layout_below="@+id/textoClaro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/textoProtegido"
        android:layout_below="@+id/tvTextoProtegido"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/botaoDesproteger"
        android:layout_alignEnd="@+id/botaoDesproteger"
        android:layout_alignParentBottom="true"
        android:background="@android:drawable/editbox_background" />

</RelativeLayout>
