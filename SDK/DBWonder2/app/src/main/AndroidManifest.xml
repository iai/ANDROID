        <meta-data android:name="DATABASE" android:value="dbwonder.db" />
        <meta-data android:name="VERSION" android:value="1" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="dbvtech.com.br.dbwonder" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AtividadeListaAlunos"
            android:label="@string/title_activity_atividade_lista_alunos" >
        </activity>
        <activity
            android:name=".AtividadeDetalheAluno"
